EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Frontend API Base URL (for CORS)
VITE_API_BASE=http://localhost:5000
